@model MoviesProject.Models.Commentaire

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Ajout commentaire";
}

<div class="container">
    <div class="row">
        <div class="col-lg-offset-3 col-lg-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Ajout d'un commentaire pour le film @ViewBag.Nom</h3>
                    @using (Html.BeginForm())
                    {
                        <div>
                            @Html.LabelFor(m => m.Contenu)
                            @Html.TextAreaFor(m => m.Contenu)
                            @Html.ValidationMessageFor(m => m.Contenu)
                        </div>

                        <input type="submit" value="Ajouter" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>
