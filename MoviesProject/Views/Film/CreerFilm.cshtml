@model MoviesProject.Models.Film

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Ajouter Film";
}

<div class="container">
    <div class="row">
        <div class="col-lg-offset-2 col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Ajouter un film</h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nom)
                            @Html.TextBoxFor(model => model.Nom, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Nom)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Genre)
                            @Html.TextBoxFor(model => model.Genre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Genre)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DateDeSortie)
                            @Html.TextBoxFor(model => model.DateDeSortie, new { type = "date", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DateDeSortie)
                        </div>
                        <div>
                            @Html.LabelFor(model => model.Description)
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "4" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                        <br />
                        <input type="submit" value="Ajouter" class="btn btn-primary" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>

